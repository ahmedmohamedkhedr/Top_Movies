<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/favouritePoster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/movies"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/favouriteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/favouritePoster"
        android:text="Favourite title"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/favouriteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/favouritePoster"
        android:layout_below="@id/favouriteTitle"
        android:text="Date"
        android:layout_marginTop="3dp"/>

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/delete_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/favouritePoster"
        android:background="#2d2d2d"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"/>

</RelativeLayout>